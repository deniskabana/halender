  --color-black: @@H_LIGHT_BLACK@@;
  --color-fg: @@H_LIGHT_FG@@;
  --color-text: @@H_LIGHT_TEXT@@;
  --color-comments: @@H_LIGHT_COMMENTS@@;
  --color-selection: @@H_LIGHT_SELECTION@@;
  --color-contrast: @@H_LIGHT_CONTRAST@@;
  --color-border: @@H_LIGHT_BORDER@@;
