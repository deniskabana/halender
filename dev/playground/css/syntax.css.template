  --color-silver: @@H_LIGHT_SILVER@@;
  --color-pink: @@H_LIGHT_PINK@@;
  --color-blue: @@H_LIGHT_BLUE@@;
  --color-blue2: @@H_LIGHT_BLUE2@@;
  --color-gold: @@H_LIGHT_GOLD@@;
  --color-purple2: @@H_LIGHT_PURPLE2@@;
  --color-white: @@H_LIGHT_WHITE@@;
  --color-red: @@H_LIGHT_RED@@;
  --color-red2: @@H_LIGHT_RED2@@;
  --color-green: @@H_LIGHT_GREEN@@;

