body,
html {
  min-height: 100%;
  padding: 0;
  margin: 0;
}

.code.dark {
  /* Colorscheme */
  --color-purple: @@H_DARK_PURPLE@@;
  --color-yellow: @@H_DARK_YELLOW@@;
  --color-orange: @@H_DARK_ORANGE@@;
	--color-lime: @@H_DARK_LIME@@;
	--color-cyan: @@H_DARK_CYAN@@;
	--color-silver: @@H_DARK_SILVER@@;
	--color-pink: @@H_DARK_PINK@@;
	--color-blue: @@H_DARK_BLUE@@;
	--color-blue2: @@H_DARK_BLUE2@@;
	--color-gold: @@H_DARK_GOLD@@;
	--color-purple2: @@H_DARK_PURPLE2@@;
	--color-white: @@H_DARK_WHITE@@;
	--color-red: @@H_DARK_RED@@;
	--color-red2: @@H_DARK_RED2@@;
	--color-green: @@H_DARK_GREEN@@;

  --color-bg: @@H_DARK_BG@@;
	--color-sidebar: @@H_DARK_SIDEBAR@@;
	--color-float: var(--color-sidebar);
	--color-black: @@H_DARK_BLACK@@;
	--color-fg: @@H_DARK_FG@@;
	--color-text: @@H_DARK_TEXT@@;
	--color-comments: @@H_DARK_COMMENTS@@;
	--color-selection: @@H_DARK_SELECTION@@;
	--color-contrast: var(--color-sidebar);
	--color-border: @@H_DARK_BORDER@@;
	--color-line_numbers: var(--color-border);
	--color-highlight: var(--color-selection);
	--color-disabled: var(--color-comments);
	--color-cursor: var(--color-pink);
	--color-accent: var(--color-yellow);
	--color-error: @@H_DARK_ERROR@@;
	--color-warning: @@H_DARK_WARNING@@;
	--color-info: @@H_DARK_CYAN@@;
	--color-link: @@H_DARK_LINK@@;

  --font-style-comments: italic;
  --font-style-functions: normal;
  --font-style-keywords: italic;
  --font-style-variables: normal;
  --font-style-strings: italic;
  --font-style-types: italic;
  --font-style-function_call: italic;
  --font-style-builtins: italic;

  --font-weight-regular: 500;
  --font-weight-bold: 700;
}
